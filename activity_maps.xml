<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_custom"
        android:visibility="visible"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"

            android:id="@+id/start_journey_tv"
            android:textColor="@color/BaseColor"
            android:textSize="25sp" />
     <androidx.appcompat.widget.SwitchCompat
         android:id="@+id/switch_compat"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/start_journey_tv"
         android:layout_marginLeft="100dp"
         android:theme="@style/BrandedSwitch.control"
         android:clickable="true"

         />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@drawable/custom_bottom_background">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_custom"
            android:backgroundTint="@color/BaseColor"
            android:layout_centerInParent="true"
            android:text="SOS"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:id="@+id/btn_sos"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"

android:id="@+id/fb1"
            android:layout_centerVertical="true"


            android:backgroundTint="@color/colorAccenn"

            android:src="@drawable/ic_help_outline_black_24dp"
            map:borderWidth="0dp" />

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/colorAccenn"
           map:borderWidth="0dp"

           android:layout_centerVertical="true"
           android:layout_marginRight="40dp"
           android:layout_alignParentRight="true"
           android:id="@+id/fb2"

           android:src="@drawable/ic_settings_black_24dp"/>

    </RelativeLayout>

   `
</RelativeLayout>